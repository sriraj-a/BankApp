        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active-mynav">@Html.ActionLink("My Loans", "ApplyLoan", "Loan")</li>
                <li>@Html.ActionLink("My Details", "UpdateUserDetails", "Registration")</li>
            </ul>
