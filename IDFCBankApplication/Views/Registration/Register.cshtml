<h2 style=" color: gold; margin-bottom: 55px; padding-left: 181px;"> User Registration</h2>
<form>
    <div class="form-group row" style="margin-left:170px;">
        <label for="firstName" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">First Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="firstName" placeholder="First Name">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="lastName" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Last Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="lastName" placeholder="Last Name">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="userName" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">User Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="userName" placeholder="user Name">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="password" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" placeholder="Password">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="confirmPassword" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Confirm Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" style="margin-top:18px;">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="address" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Address:</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="5" id="address" style="margin-top:6px;" placeholder="Enter your Address here..."></textarea>
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="state" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">State :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="state" placeholder="State">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="country" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Country :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="country" placeholder="Country">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="email" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">E-Mail :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" placeholder="E-Mail">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="pan" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">PAN :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pan" placeholder="PAN">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="contactno" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Contact No :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="contactno" placeholder="Contact No">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="dob" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">D.O.B :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="dob" placeholder="Date format (MM-dd-yyyy)">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="acType" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Account Type:</label>
        <div class="col-sm-10">
            <select class="form-control" id="acType" style="margin-top:18px;">
                <option id="savings">savings</option>
                <option id="current">current</option>
            </select>
        </div>
    </div>
    <div class="form-group" style="margin-left:514px;">
        <button class="button" onclick="registrationSubmit()">Submit</button>
    </div>
</form>

<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 8px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>