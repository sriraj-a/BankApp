<form>
    <div class="form-group row" style="margin-left:170px;margin-top:45px;">
        <label for="firstNameUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">First Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="firstNameUpdate" placeholder="First Name">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="lastNameUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Last Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="lastNameUpdate" placeholder="Last Name">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="addressUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Address:</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="5" id="addressUpdate" style="margin-top:6px;" placeholder="Enter your Address here..."></textarea>
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="stateUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">State :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="stateUpdate" placeholder="State">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="countryUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Country :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="countryUpdate" placeholder="Country">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="emailUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">E-Mail :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="emailvUpdate" placeholder="E-Mail">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="panUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">PAN :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="panUpdate" placeholder="PAN">
        </div>
    </div>
    <div class="form-group row" style="margin-left:170px;">
        <label for="contactnoUpdate" class="col-sm-2 col-form-label" style="color:white;font-size:20px;">Contact No :</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="contactnoUpdate" placeholder="Contact No">
        </div>
    </div>
    <div class="form-group" style="margin-left:514px;">
        <button class="button" onclick="UpdateDetails()">Update</button>
    </div>
</form>


